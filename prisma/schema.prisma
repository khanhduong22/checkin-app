generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==============================
// NextAuth Standard Models
// ==============================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==============================
// Business Logic Models
// ==============================

enum UserRole {
  USER
  ADMIN
}

enum EmploymentType {
  FULL_TIME
  PART_TIME
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // Custom fields
  role          UserRole  @default(USER) // Quyền hạn (ADMIN/USER)
  employmentType EmploymentType @default(PART_TIME)
  hourlyRate    Float     @default(0)   // Lương theo giờ
  monthlySalary Float     @default(6000000) // Lương theo tháng for FULL_TIME
  
  accounts      Account[]
  sessions      Session[]
  checkins      CheckIn[]
  shifts        WorkShift[]
  requests      Request[]
  stickyNotes   StickyNote[]
  adjustments   PayrollAdjustment[]
  achievements  UserAchievement[]
}

model WorkShift {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  start     DateTime // Thay thế date/startTime cũ
  end       DateTime // Thay thế endTime cũ
  
  // Backward compat fields (optional or remove)
  shiftType String?   // "CUSTOM" mostly
  
  status    String   @default("APPROVED") 
  isOpenForSwap Boolean @default(false)
  createdAt DateTime @default(now())

  // Allow multiple shifts per day, so no unique constraint on date
  @@index([userId, start])
}

model Request {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // "LATE", "EARLY", "MISSING", "OTHER"
  date      DateTime // Ngày xảy ra sự việc
  reason    String   // Lý do giải trình
  status    String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt DateTime @default(now())
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  type      String   @default("INFO") // INFO, WARNING, SUCCESS, FIRE
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model StickyNote {
  id        String   @id @default(cuid())
  content   String
  color     String   @default("yellow") // yellow, pink, blue, green
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
}

model PayrollAdjustment {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Int      // Positive for Bonus, Negative for Penalty
  reason    String
  date      DateTime @default(now())
  createdAt DateTime @default(now())
}

model UserAchievement {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  code      String   // EARLY_BIRD, STREAK_MASTER...
  unlockedAt DateTime @default(now())

  @@unique([userId, code])
}

model ShopPet {
  id        String   @id @default("shop_pet")
  name      String   @default("Mèo Họa Sĩ")
  level     Int      @default(1)
  exp       Int      @default(0)
  health    Int      @default(100) // Max 100
  mood      Int      @default(100) // Max 100
  updatedAt DateTime @updatedAt
}







model CheckIn {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // "checkin" or "checkout"
  timestamp DateTime @default(now())
  ipAddress String
  
  // Optional: ghi chú nếu cần
  note      String?
}

model AllowedIP {
  id        Int      @id @default(autoincrement())
  prefix    String   @unique
  label     String? // Ví dụ: "Văn phòng tầng 1"
  createdAt DateTime @default(now())
}
