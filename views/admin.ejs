<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Qu·∫£n Tr·ªã - Ch·∫•m C√¥ng N·ªôi B·ªô</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            min-height: 100vh;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Header */
        .header {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 24px 32px;
            margin-bottom: 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 16px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .header-left h1 {
            color: white;
            font-size: 24px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .header-left p {
            color: rgba(255, 255, 255, 0.6);
            font-size: 14px;
            margin-top: 4px;
        }

        .header-right {
            display: flex;
            gap: 12px;
        }

        .btn {
            padding: 12px 24px;
            font-size: 14px;
            font-weight: 600;
            font-family: inherit;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        /* Stats */
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
            margin-bottom: 24px;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border-radius: 16px;
            padding: 24px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stat-card .icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            margin-bottom: 16px;
        }

        .stat-card .icon.purple {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
        }

        .stat-card .icon.green {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(52, 211, 153, 0.2) 100%);
        }

        .stat-card .icon.blue {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.2) 0%, rgba(96, 165, 250, 0.2) 100%);
        }

        .stat-card .value {
            font-size: 32px;
            font-weight: 700;
            color: white;
            margin-bottom: 4px;
        }

        .stat-card .label {
            color: rgba(255, 255, 255, 0.6);
            font-size: 14px;
        }

        /* Table */
        .table-container {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 24px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            overflow: hidden;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 16px;
        }

        .table-header h2 {
            color: white;
            font-size: 18px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .search-box {
            display: flex;
            align-items: center;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 10px 16px;
            gap: 10px;
        }

        .search-box input {
            background: transparent;
            border: none;
            color: white;
            font-size: 14px;
            font-family: inherit;
            outline: none;
            width: 200px;
        }

        .search-box input::placeholder {
            color: rgba(255, 255, 255, 0.4);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 16px;
            text-align: left;
        }

        th {
            color: rgba(255, 255, 255, 0.6);
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        td {
            color: white;
            font-size: 14px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        tr:hover td {
            background: rgba(255, 255, 255, 0.03);
        }

        .employee-name {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
            font-weight: 600;
            color: white;
        }

        .ip-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 8px;
            font-size: 12px;
            font-family: 'Monaco', 'Consolas', monospace;
            background: rgba(102, 126, 234, 0.2);
            color: #a5b4fc;
        }

        .time-badge {
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .time-badge .date {
            color: rgba(255, 255, 255, 0.6);
            font-size: 12px;
        }

        .time-badge .time {
            font-weight: 600;
        }

        .btn-delete {
            background: rgba(239, 68, 68, 0.2);
            color: #fca5a5;
            border: none;
            padding: 8px 12px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 12px;
            transition: all 0.2s;
        }

        .btn-delete:hover {
            background: rgba(239, 68, 68, 0.4);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: rgba(255, 255, 255, 0.5);
        }

        .empty-state .icon {
            font-size: 64px;
            margin-bottom: 16px;
            opacity: 0.5;
        }

        .empty-state h3 {
            font-size: 18px;
            margin-bottom: 8px;
            color: rgba(255, 255, 255, 0.7);
        }

        /* Responsive table */
        .table-responsive {
            overflow-x: auto;
        }

        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                align-items: flex-start;
            }

            .header-right {
                width: 100%;
            }

            .header-right .btn {
                flex: 1;
                justify-content: center;
            }

            .stats {
                grid-template-columns: 1fr;
            }

            th, td {
                padding: 12px 8px;
            }

            .employee-name {
                flex-direction: column;
                align-items: flex-start;
                gap: 4px;
            }

            .avatar {
                display: none;
            }
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .stat-card, .table-container {
            animation: fadeInUp 0.5s ease-out;
        }

        .stat-card:nth-child(2) { animation-delay: 0.1s; }
        .stat-card:nth-child(3) { animation-delay: 0.2s; }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="header">
            <div class="header-left">
                <h1>üîß Trang Qu·∫£n Tr·ªã</h1>
                <p>Qu·∫£n l√Ω v√† xem l·ªãch s·ª≠ ch·∫•m c√¥ng nh√¢n vi√™n</p>
            </div>
            <div class="header-right">
                <a href="/" class="btn btn-primary">
                    <span>üìç</span>
                    <span>Trang Check-in</span>
                </a>
                <button onclick="location.reload()" class="btn btn-secondary">
                    <span>üîÑ</span>
                    <span>L√†m m·ªõi</span>
                </button>
            </div>
        </div>

        <!-- Stats -->
        <div class="stats">
            <div class="stat-card">
                <div class="icon purple">üìä</div>
                <div class="value"><%= checkins.length %></div>
                <div class="label">T·ªïng l∆∞·ª£t check-in</div>
            </div>
            <div class="stat-card">
                <div class="icon green">üë•</div>
                <div class="value"><%= [...new Set(checkins.map(c => c.name))].length %></div>
                <div class="label">Nh√¢n vi√™n ƒë√£ check-in</div>
            </div>
            <div class="stat-card">
                <div class="icon blue">üè¢</div>
                <div class="value" style="font-size: 14px; word-break: break-all;"><%= officeIP %></div>
                <div class="label">IP VƒÉn ph√≤ng</div>
            </div>
        </div>

        <!-- Table -->
        <div class="table-container">
            <div class="table-header">
                <h2>üìã L·ªãch s·ª≠ ch·∫•m c√¥ng</h2>
                <div class="search-box">
                    <span>üîç</span>
                    <input type="text" id="searchInput" placeholder="T√¨m ki·∫øm nh√¢n vi√™n..." onkeyup="filterTable()">
                </div>
            </div>

            <% if (checkins.length === 0) { %>
                <div class="empty-state">
                    <div class="icon">üì≠</div>
                    <h3>Ch∆∞a c√≥ d·ªØ li·ªáu ch·∫•m c√¥ng</h3>
                    <p>C√°c l∆∞·ª£t check-in s·∫Ω xu·∫•t hi·ªán ·ªü ƒë√¢y</p>
                </div>
            <% } else { %>
                <div class="table-responsive">
                    <table id="checkinsTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nh√¢n vi√™n</th>
                                <th>Th·ªùi gian</th>
                                <th>ƒê·ªãa ch·ªâ IP</th>
                                <th>H√†nh ƒë·ªông</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% checkins.forEach((checkin, index) => { %>
                                <tr data-id="<%= checkin.id %>">
                                    <td><%= index + 1 %></td>
                                    <td>
                                        <div class="employee-name">
                                            <div class="avatar"><%= checkin.name.charAt(0).toUpperCase() %></div>
                                            <span><%= checkin.name %></span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="time-badge">
                                            <span class="time"><%= checkin.timeFormatted || new Date(checkin.time).toLocaleString('vi-VN') %></span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="ip-badge"><%= checkin.ip %></span>
                                    </td>
                                    <td>
                                        <button class="btn-delete" onclick="deleteCheckin(<%= checkin.id %>)">
                                            üóëÔ∏è X√≥a
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        // T√¨m ki·∫øm trong b·∫£ng
        function filterTable() {
            const input = document.getElementById('searchInput');
            const filter = input.value.toLowerCase();
            const table = document.getElementById('checkinsTable');
            const rows = table.getElementsByTagName('tr');

            for (let i = 1; i < rows.length; i++) {
                const nameCell = rows[i].getElementsByTagName('td')[1];
                if (nameCell) {
                    const name = nameCell.textContent || nameCell.innerText;
                    if (name.toLowerCase().indexOf(filter) > -1) {
                        rows[i].style.display = '';
                    } else {
                        rows[i].style.display = 'none';
                    }
                }
            }
        }

        // X√≥a check-in
        async function deleteCheckin(id) {
            if (!confirm('B·∫°n c√≥ ch·∫Øc mu·ªën x√≥a l∆∞·ª£t check-in n√†y?')) {
                return;
            }

            try {
                const response = await fetch(`/api/checkins/${id}`, {
                    method: 'DELETE'
                });

                if (response.ok) {
                    // X√≥a d√≤ng kh·ªèi b·∫£ng
                    const row = document.querySelector(`tr[data-id="${id}"]`);
                    if (row) {
                        row.style.animation = 'fadeOut 0.3s ease-out';
                        setTimeout(() => {
                            row.remove();
                            // C·∫≠p nh·∫≠t s·ªë th·ª© t·ª±
                            updateRowNumbers();
                        }, 300);
                    }
                } else {
                    alert('L·ªói khi x√≥a d·ªØ li·ªáu!');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('L·ªói k·∫øt n·ªëi server!');
            }
        }

        // C·∫≠p nh·∫≠t s·ªë th·ª© t·ª± sau khi x√≥a
        function updateRowNumbers() {
            const table = document.getElementById('checkinsTable');
            if (!table) return;
            
            const rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');
            for (let i = 0; i < rows.length; i++) {
                rows[i].getElementsByTagName('td')[0].textContent = i + 1;
            }
        }

        // CSS animation cho x√≥a
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeOut {
                from { opacity: 1; transform: translateX(0); }
                to { opacity: 0; transform: translateX(-20px); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
